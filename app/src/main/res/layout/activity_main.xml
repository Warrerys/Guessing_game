<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7406A7FF"
    android:backgroundTint="#03D9FF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DF03FAFA"
        android:backgroundTint="#3405FAE6"
        android:focusable="auto"
        android:text="Суть игры: загадывается случайное число. Необходимо угадать его, путем ввода чисел. Удачи!"
        android:textStyle="normal|bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />


    <Button
        android:id="@+id/main_eazy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="Легко"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_rules" />

    <Button
        android:id="@+id/main_normal"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Нормально"
        app:layout_constraintBottom_toTopOf="@+id/main_hard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_eazy"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/main_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сложно"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_normal" />


</androidx.constraintlayout.widget.ConstraintLayout>